<!--                android:id="@+id/textview_custom_microsoft_translation_introduction"-->
<!--                android:layout_width="match_parent"-->
<!--                android:layout_height="wrap_content"-->
<!--                android:layout_margin="8dp"-->
<!--                android:textSize="16sp"-->
<!--                android:text="@string/custom_microsoft_translation_introduction" />-->

