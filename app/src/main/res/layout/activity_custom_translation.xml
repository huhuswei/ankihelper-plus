<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:scrollbars="none">

<LinearLayout
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:layout_marginTop="12dp"
        android:layout_marginRight="16dp"
        android:elevation="8dp"
        app:cardCornerRadius="4dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.balysv.materialripple.MaterialRippleLayout
                android:layout_width="match_parent"
                android:layout_height="48dp">
            <TextView
                android:id="@+id/tv_choose_translation_engine"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:layout_margin="8dp"
                android:text="@string/tv_choose_translation_engine"
                android:textColor="@color/primary_text"
                android:textSize="16sp" />
            </com.balysv.materialripple.MaterialRippleLayout>

            <View style="@style/Divider" />

            <TextView
                android:id="@+id/textview_custom_baidu_translation_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="16sp"
                android:text="@string/custom_baidu_translation_introduction" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="APP ID:" />

            <EditText
                android:id="@+id/edittext_baidufanyi_appid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/edit_background"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="密钥:" />

            <EditText
                android:id="@+id/edittext_baidufanyi_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/edit_background"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                />

            <TextView
                android:id="@+id/textview_custom_caiyun_translation_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="16sp"
                android:text="@string/custom_caiyun_translation_introduction" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="令牌Key:" />

            <EditText
                android:id="@+id/edittext_caiyunxiaoyi_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/edit_background"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                />

            <TextView
                android:id="@+id/textview_custom_youdao_translation_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="16sp"
                android:text="@string/custom_youdao_translation_introduction" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="APP ID:" />

            <EditText
                android:id="@+id/edittext_youdaofanyi_appid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/edit_background"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="Key:" />

            <EditText
                android:id="@+id/edittext_youdaofanyi_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/edit_background"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:gravity="top"
                android:inputType="textMultiLine"
                />


            <TextView
                android:id="@+id/textview_custom_deepl_translation_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="16sp"
                android:text="@string/custom_deeepl_translation_introduction" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="令牌Key:" />

            <EditText
                android:id="@+id/edittext_deepl_key"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"

                android:background="@drawable/edit_background"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="8dp"
                android:minLines="6"
                android:gravity="top"
                android:inputType="textMultiLine"
                />


            <TextView
                android:id="@+id/textview_custom_deeplx_translation_introduction"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:textSize="16sp"
                android:text="@string/custom_deeeplx_translation_introduction" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="8dp"
                android:text="API URLs:" />

            <EditText
                android:id="@+id/edittext_deeplx_urls"
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:background="@drawable/edit_background"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginBottom="16dp"
                android:minLines="6"
                android:gravity="top"
                android:inputType="text|textCapSentences|textNoSuggestions|textMultiLine"
                />
